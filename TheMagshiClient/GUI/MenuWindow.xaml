        xmlns:local="clr-namespace:TheMagshiClient"
        mc:Ignorable="d"
        Title="MenuWindow" Height="392.017" Width="647.479">
    <Grid Margin="0,0,2,-21">
        <TextBlock HorizontalAlignment="Left" Margin="212,5,0,0" TextWrapping="Wrap" Text="MagshiProject main menu" VerticalAlignment="Top" Height="25" Width="244" FontSize="18" FontWeight="Bold" FontFamily="Rockwell" TextDecorations="{x:Null}" IsEnabled="False"/>
