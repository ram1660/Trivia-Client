        <Button x:Name="StatsButton" Content="Your stats" HorizontalAlignment="Left" Margin="260,174,0,0" VerticalAlignment="Top" Width="147" Height="54" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="JoinRoomButton" Content="Join room" HorizontalAlignment="Left" Margin="260,115,0,0" VerticalAlignment="Top" Width="147" Height="54" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="userNameLabel" Content="Welcome {0}" HorizontalAlignment="Left" Margin="212,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.895,-0.246" Width="425" Height="29" FontFamily="Rockwell" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="LogoutButton" Content="Logout" HorizontalAlignment="Left" Margin="287,303,0,0" VerticalAlignment="Top" Width="75" FontSize="16" FontWeight="Bold" Click="LogoutButton_Click"/>

    </Grid>
</Window>
